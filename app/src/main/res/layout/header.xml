<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        app:srcCompat="@drawable/navigation_button" />
    <FrameLayout
        android:id="@+id/box_name"
        android:layout_width="185dp"
        android:layout_height="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView18"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="59dp"
        android:background="@drawable/header_background"/>

    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/box_name"
        app:layout_constraintTop_toTopOf="@+id/box_name"
        app:layout_constraintBottom_toBottomOf="@+id/box_name"
        android:layout_marginLeft="15dp"
        android:text="Hi, Sun and Moon"
        android:textSize="20dp"
        android:fontFamily="@font/canelamediumtrial"
        android:textColor="#732D2B"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="255dp"
        app:cardCornerRadius="1000dp">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"

            android:src="@drawable/logo_s_m___1_"
            />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>