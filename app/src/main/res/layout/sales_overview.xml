<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0CB"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="48dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/back_button" />

                <TextView
                    android:layout_width="81dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="80dp"
                    android:fontFamily="@font/canelaboldtrial"
                    android:text="Sales "
                    android:textColor="@color/darkbrown"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_Overview"
                        android:layout_width="104dp"
                        android:layout_height="24dp"
                        android:background="@drawable/rectangle_search"
                        android:fontFamily="@font/librefranklinmedium"
                        android:text="Overview"
                        android:textAllCaps="false"
                        android:textColor="@color/lightpink"
                        android:textSize="15dp"
                        tools:ignore="MissingConstraints" />

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_Report"
                        android:layout_width="104dp"
                        android:layout_height="24dp"
                        android:background="@drawable/frame_979"
                        android:fontFamily="@font/librefranklinmedium"
                        android:text="Sales Report"
                        android:textAllCaps="false"
                        android:textColor="@color/darkbrown"
                        android:textSize="15dp"
                        tools:ignore="MissingConstraints" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:background="@color/darkbrown"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/tv_todaysale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/librefranklinregular"
                        android:text="Today Sale"
                        android:textColor="@color/lightpink"
                        android:textSize="13dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_numsale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/librefranklinbold"
                        android:text="14.005.000 VND"
                        android:textColor="@color/lightpink"
                        android:textSize="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_todaysale" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/splitline" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/tv_nummonthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="44dp"
                        android:fontFamily="@font/librefranklinmedium"
                        android:text="+ 18%"
                        android:textColor="@color/lightpink"
                        android:textSize="12dp"
                        app:layout_constraintStart_toEndOf="@id/imageView20"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_numweekly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="19dp"
                        android:fontFamily="@font/librefranklinmedium"
                        android:text="+ 5%"
                        android:textColor="@color/lightpink"
                        android:textSize="12dp"
                        app:layout_constraintStart_toEndOf="@id/imageView19"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/triangle"

                        />

                    <TextView
                        android:id="@+id/tv_weekly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="19dp"
                        android:fontFamily="@font/librefranklinmedium"
                        android:text="Weekly"
                        android:textColor="@color/lightpink"
                        android:textSize="12dp"
                        app:layout_constraintStart_toEndOf="@id/tv_numweekly"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="45dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/triangle" />

                    <TextView
                        android:id="@+id/tv_monthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="44dp"
                        android:fontFamily="@font/librefranklinmedium"
                        android:text="Monthly"
                        android:textColor="@color/lightpink"
                        android:textSize="12dp"
                        app:layout_constraintStart_toEndOf="@id/tv_nummonthly"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <Spinner
                    android:id="@+id/spinner_timesale"
                    android:layout_width="110dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="27dp"
                    android:layout_weight="0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:layout_width="102dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/frame_979"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="260dp">

            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintLeft_toLeftOf="@+id/frame_revenue"
                    app:layout_constraintTop_toTopOf="@+id/frame_revenue"
                    app:srcCompat="@drawable/revenue" />

                <FrameLayout
                    android:id="@+id/frame_revenue"
                    android:layout_width="315dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/frame_979"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_revenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="71dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Revenue"
                    android:textColor="@color/darkbrown"
                    android:textSize="15dp"
                    app:layout_constraintLeft_toLeftOf="@+id/frame_revenue"
                    app:layout_constraintTop_toTopOf="@+id/frame_revenue" />

                <TextView
                    android:id="@+id/tv_numrevenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="71dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="45.007.000 VND"
                    android:textColor="@color/darkbrown"
                    android:textSize="22dp"
                    app:layout_constraintLeft_toLeftOf="@+id/frame_revenue"
                    app:layout_constraintTop_toBottomOf="@+id/tv_revenue" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>




