<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/tv_roomnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/librefranklinbold"
            android:text="Room 201"
            android:textColor="@color/darkbrown"
            android:textSize="25dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Status"
                android:textColor="@color/darkbrown"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_status_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Vacant and Dry"
                android:textColor="@color/darkbrown"
                android:textSize="18dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_by"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="By"
                android:textColor="@color/darkbrown"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_by_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="The Liem"
                android:textColor="@color/darkbrown"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_Time"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Time"
                android:textColor="@color/darkbrown"
                android:textSize="18dp" />



            <TextView
                android:id="@+id/tv_time_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="8:00    03/06/2023"
                android:textColor="@color/darkbrown"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Done"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_search"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="@color/lightpink"
                android:textSize="15dp" />

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Delete"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_search"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/lightpink"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/darkbrown"/>
</LinearLayout>