<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="332dp"
    android:layout_height="600dp"
    android:background="@color/lightpink"
    android:padding="20dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/tv_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinbold"
                android:textSize="25dp"
                android:textColor="@color/darkbrown"
                android:text="Room 201" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinbold"
                    android:text="Status"
                    android:textColor="@color/darkbrown"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_status1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:textColor="@color/darkbrown"
                    android:textSize="18dp"
                    android:text="Messy, Dirty Towel" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_createby"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Create by"
                    android:textColor="@color/darkbrown"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_createby1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:textColor="@color/darkbrown"
                    android:textSize="15dp"
                    android:text="The Liem" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_timecreate"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Time"
                    android:textColor="@color/darkbrown"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_timecreate1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:textColor="@color/darkbrown"
                    android:textSize="15dp"
                    android:text="8:32 AM  12/06/2023" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_updatestatus"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinbold"
                    android:text="Update Status"
                    android:textColor="@color/darkbrown"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_updatestatus1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:textColor="@color/darkbrown"
                    android:textSize="15dp"
                    android:text="The room was cleaned by Thanh Hien.
The towels were washed.  " />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_updateby"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Update by"
                    android:textColor="@color/darkbrown"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_updateby1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:textColor="@color/darkbrown"
                    android:textSize="15dp"
                    android:text="Nguyen Thien" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_timeupdate"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Time"
                    android:textColor="@color/darkbrown"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_timeupdate1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:textColor="@color/darkbrown"
                    android:textSize="15dp"
                    android:text="8:32 PM  12/06/2023" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/librefranklinbold"
                android:text="Images"
                android:textColor="@color/darkbrown"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/image_clean" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_close"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/frame_979"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Close"
                    android:textAllCaps="false"
                    android:textColor="@color/darkbrown"
                    android:textSize="15dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_Delete"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/rectangle_search"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Delete"
                    android:textAllCaps="false"
                    android:textColor="@color/lightpink"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>