<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="200dp"
    android:background="@drawable/bg_vacant_room"
    android:orientation="vertical"
    android:padding="15dp">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/lightbrown"
        android:fontFamily="@font/librefranklinbold"
        android:textSize="20dp"
        android:text="Add Surcharge"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/box_details"
        android:layout_width="226dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_checkinout"
        android:textColorHint="@color/lightbrown"
        android:hint="Details"
        android:alpha="0.5"
        android:fontFamily="@font/librefranklinregular"
        android:textColor="@color/lightbrown"
        android:paddingLeft="10dp"/>
    <EditText
        android:id="@+id/box_cost"
        android:layout_width="226dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_checkinout"
        android:textColorHint="@color/lightbrown"
        android:hint="Cost"
        android:alpha="0.5"
        android:textColor="@color/lightbrown"
        android:fontFamily="@font/librefranklinregular"
        android:paddingLeft="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirmsur"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:background="@drawable/rectangle_search"
            android:fontFamily="@font/librefranklinmedium"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/lightpink"
            android:textSize="15dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancelsur"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/frame_979"
            android:fontFamily="@font/librefranklinmedium"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/darkbrown"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>