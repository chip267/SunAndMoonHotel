<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF0CB">

    <RelativeLayout
        android:layout_width="415dp"

        android:layout_height="325dp"
        android:background="@drawable/bg"
        app:layout_constraintTop_toTopOf="parent"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="209dp"
            android:fontFamily="@font/canelaboldtrial"
            android:text="Settings"
            android:textColor="@color/darkbrown"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/back_btn_personel" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/plastic_st"
        android:layout_width="350dp"
        android:layout_height="440dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/plastic_pg_st"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="45dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/avt_round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPersonel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/librefranklinblack"
                android:text="Sun&amp;Moon Hotel"
                android:textColor="@color/darkbrown"
                android:textSize="28dp" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phonehotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Phone No."
                    android:textColor="@color/lightbrown"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_phonenohotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="+84 (0) 749829256"
                    android:textColor="@color/lightbrown"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Email"
                    android:textColor="@color/lightbrown"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_emailaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="sunmoon@gmail.com"
                    android:textColor="@color/lightbrown"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/changpasscode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="350dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mingcute_edit_2_fill"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/change_passcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Change passcode"
                android:textColor="@color/lightbrown"
                android:textSize="18dp"
                android:textStyle="italic" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>