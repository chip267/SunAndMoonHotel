<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/bg_personel"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteY="511dp" />

            <RelativeLayout
                android:id="@+id/title"
                android:layout_width="293dp"
                android:layout_height="93dp"
                android:layout_marginTop="108dp"
                android:background="@drawable/plastic_personel"
                android:foregroundGravity="center"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="73dp"
                android:layout_height="41dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="54dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/logo" />

            <ImageView
                android:layout_width="94dp"
                android:layout_height="102dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="101dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ava_personel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/librefranklinbold"
                android:text="Bui The Liem"
                android:textColor="@color/darkbrown"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="@+id/title"
                app:layout_constraintTop_toTopOf="@id/title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="52dp"
                android:fontFamily="@font/librefranklinmedium"
                android:text="ID: 1001"
                android:textColor="@color/darkbrown"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="@+id/title"
                app:layout_constraintTop_toTopOf="@id/title" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_btn_personel" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Name:"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Bui The Liem"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="ID:"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_id1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="1001"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_dateofbirth"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Date of Birth:"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_dateofbirth1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="26/03/2003"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_phoneno"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Phone No."
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_phoneno1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="8794653322"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Address:"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Linh Trung, Thu Duc, HCM"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Email:"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_email1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="liembt@uit.edu.vn"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Position:"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_position1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/librefranklinmedium"
                    android:text="Manager"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="51dp"
        app:srcCompat="@drawable/edit_button" />

</androidx.constraintlayout.widget.ConstraintLayout>