<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpink"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/canelaboldtrial"
        android:text="Bill details"
        android:textColor="@color/darkbrown"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_checkin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Check in"
                android:textColor="@color/lightbrown"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_checkintime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="12:10   07/06/2023"
                android:textColor="@color/lightbrown"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Check out"
                android:textColor="@color/lightbrown"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_checkouttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="13:10   07/06/2023"
                android:textColor="@color/lightbrown"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Room"
                android:textColor="@color/lightbrown"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_roomnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="102"
                android:textColor="@color/lightbrown"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Type of Booking"
                android:textColor="@color/lightbrown"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_tob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Hour"
                android:textColor="@color/lightbrown"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_roomcharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:fontFamily="@font/librefranklinbold"
                android:text="Room Charge"
                android:textColor="@color/lightbrown"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_roomchargemoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinbold"
                android:text="65.000"
                android:textColor="@color/lightbrown"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/librefranklinmedium"
            android:text="(1 hour)"
            android:textColor="@color/lightbrown"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_surcharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:fontFamily="@font/librefranklinbold"
                android:text="Surcharge"
                android:textColor="@color/lightbrown"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_surchargemoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinbold"
                android:text="0.0"
                android:textColor="@color/lightbrown"
                android:textSize="18dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/split_line_ver" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:fontFamily="@font/librefranklinblack"
                android:text="Total"
                android:textColor="@color/lightbrown"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/tv_totalsurchargemoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinblack"
                android:text="65.000"
                android:textColor="#F2AE1C"
                android:textSize="28dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:fontFamily="@font/librefranklinmedium"
                android:text="ID"
                android:textColor="@color/lightbrown"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_idbill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="HT1011"
                android:textColor="@color/lightbrown"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phonehotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Phone No."
                android:textColor="@color/lightbrown"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_phonenohotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="+84 (0) 749829256"
                android:textColor="@color/lightbrown"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Email"
                android:textColor="@color/lightbrown"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_emailaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="sunmoon@gmail.com"
                android:textColor="@color/lightbrown"
                android:textSize="15dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/split_line_ver" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Customer"
                android:textColor="@color/lightbrown"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_nameCus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Bui The Liem"
                android:textColor="@color/lightbrown"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phonecus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Phone No."
                android:textColor="@color/lightbrown"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_phonenocus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="08984563736"
                android:textColor="@color/lightbrown"
                android:textSize="15dp" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_exportBill"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/rectangle_search"
            android:fontFamily="@font/librefranklinmedium"
            android:text="Export Bill"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="140dp"
            android:textAllCaps="false"
            android:textColor="@color/lightpink"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>