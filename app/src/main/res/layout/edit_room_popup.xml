<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="315dp"
    android:layout_height="370dp"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/bg_vacant_room">
    <TextView
        android:id="@+id/tv_roomEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/librefranklinbold"
        android:textSize="25dp"
        android:textColor="@color/darkbrown"
        android:text="Room 112"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_typeofroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/librefranklinbold"
                android:text="Type of Room:"
                android:textSize="20dp"
                android:textColor="@color/darkbrown" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/radiogroupEdit">
                        <RadioButton
                            android:id="@+id/radioButtonStandardEdit"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:buttonTint="@color/lightbrown"
                            android:text="Standard" />
                        <RadioButton
                            android:id="@+id/radioButtonDeluxeEdit"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:buttonTint="@color/lightbrown"
                            android:text="Deluxe" />
                    </RadioGroup>
                </LinearLayout>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_rental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/librefranklinbold"
        android:textSize="23dp"
        android:textColor="@color/darkbrown"
        android:text="Rental Price"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        <TextView
            android:id="@+id/tv_hour"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/librefranklinbold"
            android:text="Hour:"
            android:textSize="20dp"
            android:textColor="@color/darkbrown"/>
        <EditText
            android:id="@+id/box_houredit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edittext_checkinout" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        <TextView
            android:id="@+id/tv_day"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/librefranklinbold"
            android:text="Day:"
            android:textSize="20dp"
            android:textColor="@color/darkbrown"/>
        <EditText
            android:id="@+id/box_dayedit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edittext_checkinout" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_doneroomedit"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:background="@drawable/rectangle_search"
            android:fontFamily="@font/librefranklinmedium"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="@color/lightpink"
            android:textSize="15dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancelroomedit"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rectangle_search"
            android:fontFamily="@font/librefranklinmedium"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/lightpink"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>