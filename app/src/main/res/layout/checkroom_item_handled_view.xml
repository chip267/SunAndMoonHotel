<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/tv_roomnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/librefranklinbold"
            android:text="Room 201"
            android:textColor="@color/darkbrown"
            android:textSize="25dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Status"
                android:textColor="@color/darkbrown"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_status_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Vacant and Dry"
                android:textColor="@color/darkbrown"
                android:textSize="18dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_by"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="By"
                android:textColor="@color/darkbrown"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_by_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="The Liem"
                android:textColor="@color/darkbrown"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_Time"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="Time"
                android:textColor="@color/darkbrown"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_time_hour"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="8:15"
                android:textColor="@color/darkbrown"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_time_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklinmedium"
                android:text="03/06/2023"
                android:textColor="@color/darkbrown"
                android:textSize="18dp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Delete"
            android:layout_width="138dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_search"
            android:fontFamily="@font/librefranklinmedium"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/lightpink"
            android:textSize="15dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/darkbrown"/>
</LinearLayout>